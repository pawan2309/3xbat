{
  "name": "3xbat-betting-platform",
  "version": "1.0.0",
  "description": "Refactored betting platform with modern architecture and single dependency management",
  "private": true,
  "workspaces": [
    "backend",
    "frontend/apps/*",
    "frontend/packages/*"
  ],
  "scripts": {
    "dev:all": "turbo run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:client": "cd frontend/apps/client-panels && npm run dev",
    "dev:operating": "cd frontend/apps/operating-panel && npm run dev",
    "dev:control": "cd frontend/apps/control-panel && npm run dev",
    "dev:frontend": "concurrently \"npm run dev:client\" \"npm run dev:operating\" \"npm run dev:control\"",
    
    "build:all": "turbo run build",
    "build:backend": "cd backend && npm run build",
    "build:client": "cd frontend/apps/client-panels && npm run build",
    "build:operating": "cd frontend/apps/operating-panel && npm run build",
    "build:control": "cd frontend/apps/control-panel && npm run build",
    "build:packages": "turbo run build --filter=./frontend/packages/*",
    
    "start:all": "turbo run start",
    "start:backend": "cd backend && npm run start",
    "start:client": "cd frontend/apps/client-panels && npm run start",
    "start:operating": "cd frontend/apps/operating-panel && npm run start",
    "start:control": "cd frontend/apps/control-panel && npm run start",
    
    "test:all": "turbo run test",
    "test:backend": "cd backend && npm run test",
    "test:client": "cd frontend/apps/client-panels && npm run test",
    "test:operating": "cd frontend/apps/operating-panel && npm run test",
    "test:control": "cd frontend/apps/control-panel && npm run test",
    "test:packages": "turbo run test --filter=./frontend/packages/*",
    
    "lint:all": "turbo run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:client": "cd frontend/apps/client-panels && npm run lint",
    "lint:operating": "cd frontend/apps/operating-panel && npm run lint",
    "lint:control": "cd frontend/apps/control-panel && npm run lint",
    "lint:packages": "turbo run lint --filter=./frontend/packages/*",
    
    "clean:all": "turbo run clean",
    "clean": "rimraf node_modules package-lock.json",
    "clean:workspaces": "rimraf **/node_modules **/package-lock.json",
    
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:db:push": "cd backend && npx prisma db push",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:studio": "cd backend && npx prisma studio",
    "prisma:seed": "cd backend && npx prisma db seed",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:build": "docker-compose build",
    
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    
    "install:all": "npm install",
    "install:workspaces": "npm install --workspaces",
    "update:deps": "npm update",
    "audit": "npm audit",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.0",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hls.js": "^1.6.10",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
